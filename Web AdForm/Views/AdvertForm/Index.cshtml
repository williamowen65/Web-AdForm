@model AdResponse


@{
    ViewData["Title"] = "Ad 1";
}

<!-- This is the body contentof a web page -->

<div id="" class="d-flex flex-column my-4">
    <div class="ad-content">



        <div class="sidebar d-flex m-auto align-items-center flex-column">
            <img id="headshot" src="https://placehold.co/600x400" alt="Alternate Text" />
            <p>I am the creator of the website you are looking at and I am always interested in picking up new jobs.</p>
        </div>

        <div class="d-flex flex-grow-1 mx-4 justify-content-center flex-column">
            <form method="post">

                <div class="field">

                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="field">
                    <label asp-for="Message"></label>
                    <textarea class="form-control" asp-for="Message"></textarea>
                    <span asp-validation-for="Message"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-sm btn-primary mt-1 mx-auto d-block">Submit</button>
            </form>
        </div>

